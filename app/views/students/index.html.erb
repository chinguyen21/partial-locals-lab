
<h1> Search student by name </h1>
<%= form_tag students_path, method: :get do%>
<%= text_field_tag(:query, params[:query])%>
<%= submit_tag "Search"%>
<%end%>

<% @students.each do |student|%>
  <ul>
    <li><%= render partial: "students/student", locals: {student: student} %></li>
  </ul>
  <%end%>